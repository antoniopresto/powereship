{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "pre": {
      "dependsOn": ["^declarations", "^build", "test"],
      "outputs": ["out/**"],
      "inputs": ["src/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["out/**"],
      "inputs": ["src/**"]
    },
    "fix": {
      "inputs": ["src/**"]
    },
    "test": {
      "inputs": ["src/**"],
      "outputLogs": "new-only",
      "cache": true
    },
    "clear": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "declarations": {
      "dependsOn": ["^declarations"],
      "outputs": ["out/**"]
    }
  }
}
