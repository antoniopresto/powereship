{
  "name": "root",
  "private": true,
  "scripts": {
    "dev": "(cd ./packages/site && yarn dev)",
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "fix": "lerna run fix",
    "commit": "git add -A && git commit",
    "fast": "run-s commit alpha",
    "validate": "(cd packages/schema && npm run prepublish)",
    "lp": "lerna exec \"yalc publish\"",
    "link-all": "lerna link --force-local",
    "alpha-version": "lerna version prerelease --yes --conventional-graduate --no-push --exact --preid=alpha.$(date +%Y%m%d%H%M%S) --force-publish",
    "build": "nx run-many --target=build --projects=$(nx affected:libs --plain | sed 's/ /,/g')",
    "publish-all": "lerna exec --no-bail 'npm publish'",
    "alpha": "lerna publish --loglevel=verbose --force-publish --yes --no-verify-access --conventional-graduate --dist-tag next --canary --no-push --exact --preid=alpha.$(date +%Y%m%dT%H%M%S%z)"
  },
  "devDependencies": {
    "@nrwl/cli": "14.7.13",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/workspace": "14.7.13",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "eslint": "7.20.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.22.1",
    "lerna": "^5.5.2",
    "npm-run-all": "4.1.5",
    "nx": "14.7.13",
    "prettier": "2.4.0",
    "typescript": "~4.8.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
