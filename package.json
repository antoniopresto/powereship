{
  "name": "root",
  "private": true,
  "scripts": {
    "clean-all": "rm -rf node_modules && yarn install && lerna clean --yes && lerna bootstrap",
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "fix": "lerna run fix",
    "commit": "git add -A && git commit",
    "fast": "run-s commit alpha",
    "validate": "(cd packages/schema && npm run prepublish)",
    "lp": "lerna exec \"yalc publish\"",
    "link-all": "lerna link --force-local",
    "alpha": "ts-node ./scripts/bpa.ts",
    "exec": "node --preserve-symlinks -r ts-node/register ./scripts/run-all.ts",
    "alpha-version": "linkall && ts-node ./scripts/alpha-version.ts"
  },
  "devDependencies": {
    "ts-node": "10.9.1",
    "@types/fs-extra": "9.0.13",
    "@types/node": "16.18.3",
    "@types/shelljs": "0.8.11",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "eslint": "7.20.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.22.1",
    "fs-extra": "10.1.0",
    "lerna": "^6.4.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.0",
    "run-each-package": "latest",
    "shelljs": "0.8.5",
    "typescript": "4.8.2"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@backland/**",
      "**/backland**",
      "typescript",
      "backland",
      "@backland**"
    ]
  }
}
