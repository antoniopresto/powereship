{
  "name": "root",
  "private": true,
  "scripts": {
    "clean-all": "rm -rf node_modules && yarn install && lerna clean --yes && lerna bootstrap",
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "fix": "lerna run fix",
    "commit": "git add -A && git commit",
    "fast": "run-s commit alpha",
    "validate": "(cd packages/schema && npm run prepublish)",
    "lp": "lerna exec \"yalc publish\"",
    "link-all": "lerna link --force-local",
    "all": "ts-node ./scripts/build.ts",
    "alpha-version": "lerna version prerelease --yes --no-git-tag-version --conventional-graduate --no-push --exact --preid=alpha.$(date +%Y.%m.%d.%H.%M.%S) --force-publish",
    "build-changed": "nx run-many --target=build --projects=$(nx affected:libs --plain | sed 's/ /,/g')",
    "publish-alpha": "lerna exec --no-bail 'npm publish --tag=next'",
    "alpha": "run-s all alpha-version publish-alpha",
    "alpha-publish": "run-s alpha-version publish-alpha"
  },
  "devDependencies": {
    "@nrwl/cli": "14.7.13",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/workspace": "14.7.13",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "eslint": "7.20.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.22.1",
    "lerna": "5.5.2",
    "npm-run-all": "4.1.5",
    "nx": "14.7.13",
    "prettier": "2.4.0",
    "typescript": "4.8.2",
    "shelljs": "0.8.5",
    "@types/shelljs": "0.8.11",
    "@types/node": "16.18.3",
    "@types/fs-extra": "9.0.13",
    "fs-extra": "10.1.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@backland/**",
      "**/backland**",
      "typescript",
      "backland",
      "@backland**"
    ]
  }
}
