{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "pre": {
      "dependsOn": ["^build", "fix", "test"],
      "outputs": ["out/**"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["out/**"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "fix": {
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "clear": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "declarations": {
      "dependsOn": ["^declarations"],
      "outputs": ["out/**"]
    }
  }
}
