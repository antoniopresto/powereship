{
  "name": "runmate",
  "version": "0.2.6",
  "typings": "lib",
  "author": "antoniopresto <antoniopresto@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "lib/module/index.js",
  "bin": {
    "run": "./lib/cli.js",
    "z": "./lib/cli.js"
  },
  "sideEffects": false,
  "scripts": {
    "test": "echo ok",
    "build": "run-s clear && run-p declarations build:*",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "clear": "rimraf lib",
    "prepublishOnly": "run-s build fix && run-p test",
    "build-targets": "run-p build:*",
    "build:node": "TARGET=node npm run babild -- --out-dir lib",
    "build:module-node": "TARGET=module-node npm run babild -- --out-dir lib/module",
    "declarations": "tsc -p tsconfig.json",
    "babild": "babel 'src' --extensions '.ts' --source-maps=true --ignore '**/__tests__'",
    "watch": "nodemon --watch ./src/cli.ts --exec \"ts-node ./src/cli.ts --src=\"../../packages/*\" ls\""
  },
  "description": "run command in each package",
  "keywords": [],
  "dependencies": {
    "@types/glob": "^8.0.1",
    "@types/lodash": "4.14.191",
    "@types/semver": "7.3.13",
    "@types/vorpal": "1.12.2",
    "chalk": "4.1.2",
    "commander": "10.0.0",
    "fs-extra": "^11.1.0",
    "glob": "8.1.0",
    "lodash": "4.17.21",
    "logstorm": "0.2.6",
    "plugin-hooks": "^1.1.111",
    "semver": "7.3.8"
  },
  "devDependencies": {
    "@babel/cli": "7.19.3",
    "@babel/plugin-transform-typescript": "7.19.3",
    "@babel/preset-env": "7.19.3",
    "@babel/preset-typescript": "7.18.6",
    "babel-preset-minify": "0.5.2",
    "@backland/babel-plugins": "0.2.6",
    "@types/node": "16.18.3",
    "@typescript-eslint/eslint-plugin": "5.39.0",
    "@typescript-eslint/parser": "5.39.0",
    "eslint": "8.25.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-typescript-sort-keys": "2.1.0",
    "jest": "29.1.2",
    "nodemon": "2.0.20",
    "npm-run-all": "4.1.5",
    "prettier": "^2.8.3",
    "prettier-plugin-multiline-arrays": "^1.1.3",
    "rimraf": "3.0.2",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.3"
  },
  "files": [
    "package.json",
    "lib/*",
    "README.md"
  ],
  "prettier": {
    "singleQuote": true
  }
}
