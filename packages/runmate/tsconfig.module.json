{
  "extends": "./tsconfig.prod.json",
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "out",
    "module": "ES2022",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "paths": {
      "lodash": ["./node_modules/lodash-es"],
      "lodash/*": ["./node_modules/lodash-es/*"]
    }
  },
  "exclude": [
    "node_modules/**", //
    "**/*/__tests__/*"
  ]
}
